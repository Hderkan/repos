@model EF_CodeFirst.Models.Entities.Category

@{
    ViewData["Title"] = "Create";
}

<h1 class="display-3">Yeni Kitap kategori</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label class="control-label">Kitap kategori</label>
                <input type="text" asp-for="CategoryName" class="form-control">
                <label class="control-label">Kitap acıklama</label>
                <input type="text" asp-for="CategoryDescription" class="form-control">
                <label class="control-label">Kitap durumu</label>
                <input type="text" asp-for="IsDeleted" class="form-control">
                
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-success">
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Kitap Türü Listesine Geri Dön</a>
</div>